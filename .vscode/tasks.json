{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cargo",
      "command": "build",
      "args": ["--example", "${input:exampleName}"],
      "group": "build",
      "label": "rust: cargo build --example",
      "problemMatcher": ["$rustc"]
    },
    {
      "type": "cargo",
      "command": "build",
      "args": ["--lib"],
      "group": "build",
      "label": "rust: cargo build lib",
      "problemMatcher": ["$rustc"]
    },
    {
      "type": "cargo",
      "command": "build",
      "args": ["--example", "real_model_example"],
      "group": "build",
      "label": "rust: cargo build --example real_model_example",
      "problemMatcher": ["$rustc"]
    },
    {
      "type": "cargo",
      "command": "test",
      "args": [],
      "group": "test",
      "label": "rust: cargo test",
      "problemMatcher": ["$rustc"]
    }
  ],
  "inputs": [
    {
      "type": "pickString",
      "id": "exampleName",
      "description": "Select example to build",
      "options": [
        "real_model_example",
        "single_frame",
        "multi_frame", 
        "video_stream",
        "simple_demo"
      ]
    }
  ]
}